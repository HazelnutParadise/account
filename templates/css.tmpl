{{ define "css" }}
<style>
    body {
        height: 100vh;
        background: #f78fb6;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        flex-wrap: wrap;
    }

    .container {
        width: 300px;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        padding: 40px 20px;
        text-align: center;
    }

    .container h1 {
        margin-top: 0px;
        margin-bottom: 10px;
        color: #6200ea;
    }

    .container h2 {
        margin-top: 10px;
        margin-bottom: 30px;
        font-size: 24px;
        color: #333;
    }

    .container input[type="text"],
    .container input[type="password"] {
        width: calc(100% - 22px);
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .container button {
        background-color: #6200ea;
        color: white;
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }

    .container a {
        text-decoration: none;
        color: #6200ea;
        margin-top: 10px;
        display: block;
    }

    .container a:hover {
        color: #3700b3;
        text-decoration: underline;
    }

    .container .a-button {
        display: block;
        border: #6200ea solid 1px;
        margin-top: 10px;
        padding: 5px;
        border-radius: 5px;
        text-decoration: none;
        color: #6200ea;
    }

    .container .a-button:hover {
        text-decoration: none;
        background-color: #3700b3;
        border-color: #3700b3;
        color: white;
    }

    .container button:hover {
        background-color: #3700b3;
    }

    .warning {
        border-radius: 5px;
        height: 30px;
        display: none;
        justify-content: center;
        align-items: center;
        color: red;
        background-color: #f8d7da;
        /* 設定錯誤訊息的顏色 */
    }

    .link-div {
        margin-top: 10px;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        gap: 20px;
    }
</style>
{{ end }}