{{ define "css" }}
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;700&display=swap" rel="stylesheet">
<style>
    body {
        height: 100vh;
        background: #f78fb6;
        font-family: 'Open Sans', sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        flex-wrap: wrap;
    }

    main {
        padding: 20px 0;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
    }

    form {
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .note {
        margin: 0;
        padding: 0;
        font-size: 0.9rem;
        font-weight: 600;
        color: #333;
    }

    .container {
        width: 300px;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        padding: 40px 20px;
        text-align: center;
    }

    .container h1 {
        margin-top: 0px;
        margin-bottom: 10px;
        font-size: 2rem;
        color: #6200ea;
    }

    .container h2 {
        margin-top: 10px;
        margin-bottom: 30px;
        font-size: 1.6rem;
        color: #333;
    }

    .container label {
        text-align: left;
        display: block;
        font-weight: 500;
        padding-left: 5px;
        margin-bottom: 3px;
        color: #333;
    }

    .container input {
        width: calc(100% - 22px);
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .container input[type="submit"] {
        background-color: #6200ea;
        color: white;
        width: 100%;
        margin: 0;
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1rem;
    }

    .container input[type="submit"]:hover {
        background-color: #3700b3;
    }

    .container a {
        text-decoration: none;
        color: #6200ea;
        margin-top: 10px;
        display: block;
    }

    .container a:hover {
        color: #3700b3;
        text-decoration: underline;
    }

    .container .a-button {
        display: block;
        border: #6200ea solid 1px;
        margin-top: 10px;
        padding: 5px;
        border-radius: 5px;
        text-decoration: none;
        color: #6200ea;
    }

    .container .a-button:hover {
        text-decoration: none;
        background-color: #3700b3;
        border-color: #3700b3;
        color: white;
    }

    .warning {
        border-radius: 5px;
        height: 30px;
        display: none;
        justify-content: center;
        align-items: center;
        color: red;
        background-color: #f8d7da;
        /* 設定錯誤訊息的顏色 */
    }

    .link-div {
        margin-top: 10px;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        gap: 20px;
    }

    .profile h3 {
        margin: 0;
        padding: 0;
        font-size: 1.2rem;
        font-weight: 600;
        color:rgb(247, 90, 147);
    }

    .profile .info {
        max-width: 200px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .profile .info > div > h3 {
        text-align: left;
    }
</style>
{{ end }}