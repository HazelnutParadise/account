{{ define "css" }}
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;700&display=swap" rel="stylesheet">
<style>
    * {
        box-sizing: border-box;
        font-family: 'Open Sans', sans-serif;
    }

    body {
        height: 100vh;
        background: #f78fb6;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        flex-wrap: wrap;
    }

    main {
        padding: 20px 0;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
    }

    form {
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .note {
        margin: 0;
        padding: 0;
        font-size: 0.9rem;
        font-weight: 600;
        color: #333;
    }

    .main-btn {
        background-color: #6200ea;
        color: white;
        width: 100%;
        margin: 0;
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1rem;
    }

    .main-btn:hover {
        background-color: #3700b3;
    }

    .container {
        width: 380px;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        padding: 40px 20px;
        text-align: center;
    }

    .container h1 {
        margin-top: 0px;
        margin-bottom: 10px;
        font-size: 2rem;
        color: #6200ea;
    }

    .container h2 {
        margin-top: 10px;
        margin-bottom: 30px;
        font-size: 1.6rem;
        color: #333;
    }

    .container label {
        text-align: left;
        display: block;
        font-weight: 500;
        padding-left: 5px;
        margin-bottom: 5px;
        color: #333;
    }

    .container input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .container a {
        text-decoration: none;
        color: #6200ea;
        margin-top: 10px;
        display: block;
    }

    .container a:hover {
        color: #3700b3;
        text-decoration: underline;
    }
    
    .a-button, .secondary-btn {
        display: block;
        border: #6200ea solid 1px;
        margin-top: 10px;
        padding: 5px;
        border-radius: 5px;
        text-decoration: none;
        color: #6200ea;
    }

    .secondary-btn {
        background-color: #fff;
        font-size: 1.2rem;
        padding: 5px 10px;
    }

    .a-button:hover, .secondary-btn:hover {
        text-decoration: none !important;
        background-color: #3700b3;
        border-color: #3700b3;
        color: white !important;
    }

    .warning {
        border-radius: 5px;
        height: 30px;
        display: none;
        justify-content: center;
        align-items: center;
        color: red;
        background-color: #f8d7da;
        /* 設定錯誤訊息的顏色 */
    }

    .link-div {
        margin-top: 10px;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        gap: 20px;
    }

    .profile {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .profile > .container {
        padding-top: 20px;
        padding-left: 40px;
        padding-right: 40px;
    }

    .profile h3 {
        margin: 0;
        padding: 0;
        font-size: 1.2rem;
        font-weight: 600;
        color:rgb(247, 90, 147);
    }

    .profile .info {
        max-width: 80%;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .profile .info > .line {
        width: 100%;
        padding: 5px;
        border: 1px solid #ddd;
        text-align: end;
        display: flex;
        flex-direction: column;
        gap: 10px;
        font-size: 1.1rem;
        word-break: break-all;
    }

    .profile .info > .line > h3 {
        text-align: left;
    }

</style>
{{ end }}